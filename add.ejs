<html lang="en">
<head>
    <title>Fashion Feet</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="style.css">
     <!-- Theme style -->
 <link rel="stylesheet" href="dist/css/adminlte.min.css">
