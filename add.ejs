<body>
    <h4 class="c1">Add a new Product</h4>
    <form action='/AddData' method="POST">
      
        
        <section class="content">
          <div class="row">
            <div class="col-md-4">
              <form action="/create" method="POST">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Ladies Footware</h3>
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                      <i class="fas fa-minus"></i>
                    </button>
                  </div>
                </div> 
                <div class="card-body">
                  <div class="form-group">
                    <label for="inputName">Product Id</label>
                    <input type="number" placeholder="Enter product Id" class="form-control" name="pid"><br>
                  </div>
                  <div class="form-group">
                    <label for="inputDescription">Product Category</label>
                    <input type="text" placeholder="Enter Category" name="category"><br>
                  </div>
                  <div class="form-group">
                    <label>Type of the product:</label> &nbsp;
                    <input type="text" placeholder="Enter Type" id="inputName" class="form-control" name="type" required>
                  </div>
                  <div class="form-group">
                    <label>Size:</label>
                    <input type="number" placeholder="Enter size" id="inputClientCompany" class="form-control" name="size" required>
                  </div>
                  <div class="form-group">
                    <label>Stock:</label>
                    <input type="number" placeholder="Enter stock" id="inputProjectLeader" class="form-control" name="stock" required>
                  </div>
                  <div class="form-group">
                    <label>price:</label>
                    <input type="number" id="inputProjectLeader" placeholder="Enter price" class="form-control" name="sp" required>
                  </div>
                </div>
                <div class="row">
                    <div class="col-4" style="left: -20px; bottom: 10px;">
                     
                      <input type="submit" value="Submit" class="btn btn-success float-right">
                    </div>
                    
                  </div>
                </form>
                <div class="col-4" style="right: -230px; bottom: 46.8px;">
                  <a href="/">
                    <input type="button" value="Cancel" class="btn btn-success float-right">
                  </a>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
          </div>
        </section>




        

        
        


        

</form>
    
</body>
</html>
